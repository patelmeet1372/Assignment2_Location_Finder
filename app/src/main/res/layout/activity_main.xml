<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Finder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- EditText for entering location -->
    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location to find coordinates"
        android:padding="12dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:textColor="#000000"
        android:textColorHint="#B0BEC5"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- TextView to display latitude and longitude -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude: [latitude_value]\nLongitude: [longitude_value]"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Button to query location -->
    <Button
        android:id="@+id/buttonQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query Location"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007BFF"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to navigate to update page -->
    <Button
        android:id="@+id/buttonUpdateDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Database"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:padding="12dp"
        android:elevation="4dp" />
</LinearLayout>
