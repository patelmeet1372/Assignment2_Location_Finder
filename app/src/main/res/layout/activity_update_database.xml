<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Database"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- EditText for entering location -->
    <EditText
        android:id="@+id/editTextLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location name"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#B0BEC5"
        android:layout_marginBottom="12dp" />

    <!-- EditText for entering latitude -->
    <EditText
        android:id="@+id/editTextLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter latitude"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#B0BEC5"
        android:layout_marginBottom="12dp" />

    <!-- EditText for entering longitude -->
    <EditText
        android:id="@+id/editTextLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter longitude"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#B0BEC5"
        android:layout_marginBottom="24dp" />

    <!-- Button to add location -->
    <Button
        android:id="@+id/buttonAddLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Button to delete location -->
    <Button
        android:id="@+id/buttonDeleteLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Location"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Button to update location -->
    <Button
        android:id="@+id/buttonUpdateLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:elevation="4dp" />

</LinearLayout>
